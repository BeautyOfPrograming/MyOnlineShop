<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">


    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"

        >

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>


    <EditText

        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re"
        android:layout_margin="25dp"
        android:background="@drawable/sign_up_style"
        android:gravity="center"
        android:hint="Please enter your phone number"
        android:padding="15dp" />


    <TextView
        android:id="@+id/ask_enter_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_phone_number"
        android:layout_margin="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Answer the following Questions"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ask_enter_questions"
        android:layout_margin="25dp"
        android:background="@drawable/sign_up_style"
        android:gravity="center"
        android:hint="what is your favourite color ? "

        android:padding="15dp" />

    <EditText
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/q1"
        android:layout_margin="25dp"
        android:background="@drawable/sign_up_style"
        android:gravity="center"
        android:hint="Who is your super hero ?"
        android:padding="15dp" />

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/q2"
        android:layout_margin="25dp"
        android:background="@drawable/sign_style"
        android:gravity="center"
        android:padding="15dp"
        android:text="Verify"
        android:textColor="@color/white"

        />


</RelativeLayout>