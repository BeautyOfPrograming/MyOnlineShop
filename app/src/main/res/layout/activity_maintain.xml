<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="15dp"
    android:elevation="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/product_maintain_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/product_maintain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/sign_up_style"
            android:hint="product name"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/product_maintain_image" />


        <TextView
            android:id="@+id/product_maintain_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sign_up_style"
            android:hint="Product price"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/product_maintain_name" />

        <TextView
            android:id="@+id/product_maintain_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sign_up_style"
            android:hint="Product description"
            android:padding="15dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/product_maintain_price" />


        <Button
            android:id="@+id/product_maintain_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sign_style"
            android:text="Apply changes "
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/product_maintain_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>