<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sellers.SellerRegisterActivity">

    <com.rey.material.widget.ImageView
        android:id="@+id/seller_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/seller" />

    <TextView
        android:id="@+id/seller_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_image"
        android:layout_marginTop="20dp"
        android:text="Seller registration Form"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_txt"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="20dp"
        android:hint="name" />


    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_name"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="20dp"
        android:hint="Phone" />


    <EditText
        android:id="@+id/seller_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_phone"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="20dp"
        android:hint="Email" />


    <EditText
        android:id="@+id/seller_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_email"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="20dp"
        android:hint="Password" />


    <EditText
        android:id="@+id/seller_shop_business_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_pass"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:hint="Shop - Business Address" />


    <Button
        android:id="@+id/seller_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_shop_business_address"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_green_dark"
        android:text="Register"
        android:layout_centerInParent="true"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/seller_already_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_green_dark"
        android:text="Already have an Account ?"
        android:textColor="@color/white" />

</RelativeLayout>